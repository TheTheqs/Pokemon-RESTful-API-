<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pokemon API project by Matheqs :D</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href='/styles/main.css'>
</head>
<body class="bg-light">
    <div class="container py-4">
        <!--Pokemon Logo-->
        <img src="/images/Pokelogo.png" class="d-block mx-auto mb-4" alt="Pokemon Logo">
        <!-- form -->
        <form action="/search" class="mb-4 d-flex flex-column align-items-center gap-3" method="post">
            <div class="form-group w-50">
                <label for="pokemonName" class="form-label"></label>
                <input type="text" class="form-control" id="pokemonName" name="userTyped" placeholder="Search by Pokémon Name, Number, or Type!">
            </div>
            <button type="submit" class="btn btn-primary w-50">Search</button>
        </form>
        <!--Card Test-->
        <% if (locals.pokemonArray != null) {%> <!--Array validation-->
            <ul class="list-unstyled px-0">
                <% pokemonArray.forEach(element => { %>
                <li class="mb-4">
                    <div class="d-flex flex-column align-items-center gap-3">
                        <div class="card text-center border-primary" style="width: 18rem;">
                            <div class="card-header bg-primary text-white d-flex justify-content-center"><%=element.idNumber %></div> <!--Id number-->
                            <img src="<%= element.imgURL %>" class="card-img-top w-50 d-block mx-auto mb-4" alt="Pokemon Image"> <!--Endereço de imagem-->
                            <div class="card-body">
                                <h2 class="card-title"><%=element.pokemonName %></h2> <!--Pokemon name-->
                                <div class="d-flex justify-content-center gap-2">
                                    <!--tipos-->
                                    <% element.pokemonType.forEach(type => { %>
                                    <span class="badge <%=type.typeColor%> p-2 fs-5"><%=type.typeName%></span>
                                    <% }); %>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
                <%}); %>
            </ul>
        <% }; %>
    </div>
</body>
</html>